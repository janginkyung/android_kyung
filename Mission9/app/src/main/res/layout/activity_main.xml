<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.mission9.MainActivity">

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#ffffffff"
        >
        <Button
            android:id="@+id/colorBtn"
            android:drawableTop="@drawable/colorpalette"
            android:drawablePadding="2dp"
            android:text="Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/penBtn"
            android:drawableTop="@drawable/penpalette"
            android:drawablePadding="2dp"
            android:text=" Pen "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/eraserBtn"
            android:drawableTop="@drawable/eraser"
            android:drawablePadding="2dp"
            android:text="Eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/undoBtn"
            android:drawableTop="@drawable/undo"
            android:drawablePadding="2dp"
            android:text=" Undo "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
<org.androidtown.mission9.Radio
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/radiobutton">

</org.androidtown.mission9.Radio>
    <LinearLayout
        android:id="@+id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    </LinearLayout>

</LinearLayout>
